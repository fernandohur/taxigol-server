<%= form_for(@driver) do |f| %>
    <% if @driver.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@driver.errors.count, "error") %> prohibited this driver from being saved:</h2>

          <ul>
            <% @driver.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :Foto %><br />
      <%= f.file_field :image %>
    </div>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :cedula %><br />
      <%= f.text_field :cedula %>
    </div>
    <div class="field">
      <%= f.label :cel_number %><br />
      <%= f.text_field :cel_number %>
    </div>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.text_field :password %>
    </div>

    <div class="control-group">
      <%= label_tag :placa_taxi,nil , :class=>"control-label", :for=>:placa_taxi%>
      <div class="controls">
        <%= text_field_tag :placa %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>